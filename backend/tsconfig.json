{
    "files": [
      "index.ts"
    ],
    "include": [
      "**/*.ts"
    ],
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": true,
      "target": "es6",
      "outDir": "dist",
      "rootDir": ".",
      "sourceMap": true,
      "baseUrl": ".",
